 <DataGrid Name="Grid_BloodgroupViewModel"  AutoGenerateColumns="False" IsReadOnly="True" CanUserReorderColumns="True" GridLinesVisibility="All" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
              Items="{Binding BloodgroupViewModels}">
          <DataGrid.Columns>
            	<DataGridTextColumn Header="Id"  Binding="{Binding Id } " />  
    
	<DataGridTextColumn Header="BloodGroupName"  Binding="{Binding BloodGroupName } " />  
    
	<DataGridTextColumn Header="BloodGroupDescription"  Binding="{Binding BloodGroupDescription } " />  
    
	<DataGridTextColumn Header="Active"  Binding="{Binding Active } " />  
    
	<DataGridTextColumn Header="CreatedDate"  Binding="{Binding CreatedDate } " />  
    
	<DataGridTextColumn Header="ModifieldDate"  Binding="{Binding ModifieldDate } " />  

            <DataGridTemplateColumn Header="Action" CanUserResize="True" Width="2*">
              <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                  <Grid ColumnDefinitions="*,*">
                    <Button Grid.Column="0" HorizontalAlignment="Right" Width="100" Margin="10" Background="Goldenrod" Padding="10" Content="Edit"/>
                    <Button Grid.Column="1" HorizontalAlignment="Left" Width="100" Background="Red" Margin="10" Padding="10" Content="Delete"/>
                  </Grid>
                </DataTemplate>
              </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
          </DataGrid.Columns>
</DataGrid>

<Grid RowDefinitions="auto,*,50">
    <StackPanel Orientation="Horizontal"
                Grid.Row="0"
                Background="LightBlue">
        <Label Content="SampleHeader"
               Margin="2,0"
               FontSize="16"
               FontWeight="Bold" />
    </StackPanel>
    <Grid Grid.Row="1"
          ColumnDefinitions="120,*"
          Background="#eeeeee"
          Margin="10,5,10,0"
          RowDefinitions="auto , auto , auto , auto , auto , auto">
        <!-- row 0 -->
        <Label Content="Id"
               Grid.Column="0"
               Grid.Row="0"
               Margin="0,5" />
        <TextBox Text=""
                 Grid.Column="1"
                 Grid.Row="0"
                 Margin="0,5" />
        <!-- row 1 -->
        <Label Content="BloodGroupName"
               Grid.Column="0"
               Grid.Row="1"
               Margin="0,5" />
        <TextBox Text=""
                 Grid.Column="1"
                 Grid.Row="1"
                 Margin="0,5" />
        <!-- row 2 -->
        <Label Content="BloodGroupDescription"
               Grid.Column="0"
               Grid.Row="2"
               Margin="0,5" />
        <TextBox Text=""
                 Grid.Column="1"
                 Grid.Row="2"
                 Margin="0,5" />
        <!-- row 3 -->
        <Label Content="Active"
               Grid.Column="0"
               Grid.Row="3"
               Margin="0,5" />
        <TextBox Text=""
                 Grid.Column="1"
                 Grid.Row="3"
                 Margin="0,5" />
        <!-- row 4 -->
        <Label Content="CreatedDate"
               Grid.Column="0"
               Grid.Row="4"
               Margin="0,5" />
        <TextBox Text=""
                 Grid.Column="1"
                 Grid.Row="4"
                 Margin="0,5" />
        <!-- row 5 -->
        <Label Content="ModifieldDate"
               Grid.Column="0"
               Grid.Row="5"
               Margin="0,5" />
        <TextBox Text=""
                 Grid.Column="1"
                 Grid.Row="5"
                 Margin="0,5" />
    </Grid>
    <Grid Grid.Row="2"
          Margin="10,0,10,2"
          Background="#eeeeee"
          ColumnDefinitions="*,*">
        <Button Margin="10"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Center"
                Width="80"
                Content="Save" />
        <Button Margin="10"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Center"
                Width="80"
                Content="Cancel" />
    </Grid>
</Grid>
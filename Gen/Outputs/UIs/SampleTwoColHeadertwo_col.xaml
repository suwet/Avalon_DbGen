 <Grid RowDefinitions="auto,*,50">
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Background="LightBlue">
            <Label Content="SampleTwoColHeader"
                   Margin="2,0"
                   FontSize="16"
                   FontWeight="Bold" />
        </StackPanel>
        <Grid Grid.Row="1"
              ColumnDefinitions="160,*,150,*"
              Background="#eeeeee"
              Margin="10,5,10,0"
              RowDefinitions="auto,auto,auto">

              <Label Content="Id" Grid.Row="0" Grid.Column="0" Margin="0,0,0,10"/> 
 <TextBox Text="" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>  
 <Label Content="BloodGroupName" Grid.Row="0" Grid.Column="2" Margin="10,0,0,10"/>  
 <TextBox Text="" Grid.Row="0" Grid.Column="3" Margin="0,0,0,10"/>  

 
 <Label Content="BloodGroupDescription" Grid.Row="1" Grid.Column="0" Margin="0,0,0,10"/> 
 <TextBox Text="" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>  
 <Label Content="Active" Grid.Row="1" Grid.Column="2" Margin="10,0,0,10"/>  
 <TextBox Text="" Grid.Row="1" Grid.Column="3" Margin="0,0,0,10"/>  

 
 <Label Content="CreatedDate" Grid.Row="2" Grid.Column="0" Margin="0,0,0,10"/> 
 <TextBox Text="" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>  
 <Label Content="ModifieldDate" Grid.Row="2" Grid.Column="2" Margin="10,0,0,10"/>  
 <TextBox Text="" Grid.Row="2" Grid.Column="3" Margin="0,0,0,10"/>  

 

              
        </Grid>
        <Grid Grid.Row="2"
              Margin="10,0,10,2"
              Background="#eeeeee"
              ColumnDefinitions="*,*">
            <Button Margin="10"
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Center"
                    Width="80"
                    Content="Save" />
            <Button Margin="10"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Center"
                    Width="80"
                    Content="Cancel" />
        </Grid>
    </Grid>